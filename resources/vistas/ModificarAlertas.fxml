<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Pantalla para modificar el stock mínimo (alertas) -->

<AnchorPane prefHeight="231.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controladores.ModificarAlertasController">

    <!-- Título -->
    <Label layoutX="100.0" layoutY="16.0" style="-fx-font-size: 16px;" text="Modificar Alertas" />

    <!-- ComboBox para seleccionar producto -->
    <ComboBox fx:id="comboProductos" layoutX="35.0" layoutY="52.0" prefWidth="250" promptText="Seleccionar producto" />

    <!-- Etiqueta de stock mínimo -->
    <Label layoutX="39.0" layoutY="100.0" text="Stock mínimo de alerta:" />

    <!-- Campo para mostrar y editar el stock mínimo -->
    <TextField fx:id="txtStockMinimo" layoutX="184.0" layoutY="96.0" prefWidth="100" />

    <!-- Botón para guardar los cambios -->
    <Button fx:id="btnGuardar" layoutX="110.0" layoutY="138.0" prefWidth="100" text="Guardar" />

    <!-- Botón para volver al menú -->
    <Button fx:id="btnVolver" layoutX="124.0" layoutY="181.0" prefHeight="27.0" prefWidth="74.0" text="Volver" />

</AnchorPane>
