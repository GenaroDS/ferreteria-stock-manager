<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Vista para realizar una venta de producto -->
<AnchorPane prefHeight="284.0" prefWidth="292.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controladores.PantallaVentaController">

    <!-- Título -->
    <Label layoutX="83.0" layoutY="23.0" style="-fx-font-size: 16px;" text="Venta de Producto" />

    <!-- Selección de producto -->
    <Label layoutX="20.0" layoutY="72.0" text="Producto:" />
    <ComboBox fx:id="comboProductos" layoutX="100.0" layoutY="67.0" prefWidth="160.0" />

    <!-- Selección de unidad -->
    <Label layoutX="20.0" layoutY="112.0" text="Unidad:" />
    <ComboBox fx:id="comboUnidades" layoutX="100.0" layoutY="107.0" prefWidth="160.0" />

    <!-- Ingreso de cantidad -->
    <Label layoutX="20.0" layoutY="152.0" text="Cantidad:" />
    <TextField fx:id="campoCantidad" layoutX="100.0" layoutY="147.0" prefWidth="160.0" />

    <!-- Botón para ejecutar la venta -->
    <Button fx:id="btnVender" layoutX="74.0" layoutY="192.0" prefHeight="27.0" prefWidth="139.0" text="Vender" />

    <!-- Botón para volver -->
    <Button fx:id="btnVolver" layoutX="104.0" layoutY="240.0" prefWidth="80.0" text="Volver" />

</AnchorPane>
