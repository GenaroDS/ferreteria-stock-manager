<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Vista de la pantalla para consultar stock de productos -->

<AnchorPane prefHeight="383.0" prefWidth="317.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controladores.PantallaConsultarStockController">

    <!-- Título de la pantalla -->
    <Label fx:id="lblTitulo" layoutX="103.0" layoutY="14.0" style="-fx-font-size: 16px;" text="Consultar Stock" />

    <!-- ComboBox para seleccionar producto -->
    <ComboBox fx:id="comboProductos" layoutX="34.0" layoutY="50.0" prefWidth="250" promptText="Seleccionar producto" />

    <!-- Botón para ejecutar la consulta -->
    <Button fx:id="btnConsultar" layoutX="99.0" layoutY="90.0" prefWidth="120" text="Consultar" />

    <!-- Área para mostrar el resultado del stock -->
    <TextArea fx:id="areaResultado" editable="false" focusTraversable="false" layoutX="34.0" layoutY="130.0" prefHeight="192.0" prefWidth="250.0" wrapText="true" />

    <!-- Botón para volver a la pantalla anterior -->
    <Button fx:id="btnVolver" layoutX="131.0" layoutY="336.0" prefWidth="60" text="Volver" />

</AnchorPane>
